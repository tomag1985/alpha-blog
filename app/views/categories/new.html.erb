<h1 class="text-center mt-4">Create a new article</h1>

<div class="container">
	<div class="row justify-content-center">
		<div class="col-10">
			<%= render 'shared/errors', obj: @category %>
				<%= form_with(model: @category, class:"shadow p-3 mb-3 bg-info rounded", local: true)  do |f| %>
					<div class="form-group row mb-2">
						<%= f.label :name, "Category name", class:"col-2 col-form-label text-light" %>
						<div class="col-10">
							<%= f.text_field :name, class:"form-control shadow rounded", placeholder:"Enter a category name" %>
						</div>
					</div>


					<div class="form-group row justify-content-center mt-4">
						<div class="col-4">
							<%= f.submit class:"btn btn-outline-light btn-lg" %>
						</div>
					</div>
				<% end %>	

			<div class="mb-3 d-flex justify-content-center">
				<%= link_to "[ Back to index ]", articles_path, class:"text-info" %>
			</div>
		</div>
	</div>
</div>